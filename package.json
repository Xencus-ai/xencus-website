{
  "name": "xencus-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "EXPORT=true next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "e2e": "playwright test",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:mobile": "playwright test --project=mobile",
    "lighthouse": "bash scripts/lighthouse.sh",
    "check": "echo '\\n  Xencus Quality Gate\\n' && npm run typecheck && echo '  ✓ TypeScript' && npm run lint && echo '  ✓ ESLint' && npm run build && echo '  ✓ Build\\n\\n  All checks passed.\\n'"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.3.1",
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "browserslist": [
    "chrome >= 94",
    "firefox >= 93",
    "safari >= 15.4",
    "edge >= 94"
  ],
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
